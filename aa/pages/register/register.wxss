page{
  width: 670rpx;
  margin: 0 40rpx;
}
.inputBox{
  padding-left: 20rpx;
  height: 60rpx;
  border-radius: 8rpx;
  border: 1rpx rgb(238 , 238, 238) solid;
}
.text{
  color: rgb(128, 128, 128);
  font-size: 26rpx;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}
.button{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgb(233, 102, 102);
  border-radius: 8rpx;
  color: rgb(255, 255, 255);
  text-align: center;
  margin-bottom: 50rpx;
}
.title{
  /* color: rgb(128, 128, 128); */
  font-size: 30rpx;
}
.form_group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.form_group .sendmsg_input {
  width: 370rpx;
}
.form_group .vertificate {
  width: 326rpx;
  border-bottom: 1px solid #ddd;
  height: 121rpx;
  padding-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 121rpx;
  text-align: center;
  color: #34c9c3;
}

.vertificate text {
  color: gray;
}

.placeholder_style {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #dbdbdb;
  letter-spacing: 0;
}
.form_group input, .form_group picker {
  width: 676rpx;
  border-bottom: 1px solid #ddd;
  height: 121rpx;
  padding-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 121rpx;
}
