/* pages/friendShare/friendShare.wxss */

image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
}

.movie {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.movie-list {
  width: 45%;
  padding: 20rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.text-view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 65rpx;
}

.movie-text-btn {
  width: 300rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
}

text {
  font-size: 30rpx;
}

.receiveBtn {
  display: flex;
  flex-direction: row-reverse;
  font-size: 30rpx;
  background-color: rgb(168, 180, 219);
  border-radius: 100rpx;
  padding: 0;
  margin: 0;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50rpx;
  vertical-align: middle;
}
