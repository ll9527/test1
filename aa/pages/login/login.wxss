page{
  background-color: rgb(241, 241, 241);
  margin: 0 20rpx;
  width: 710rpx;
}
.inputbox{
  background-color: rgb(255, 255, 255);
  padding-left: 40rpx;
  margin:40rpx 0;
}
.button{
  width: 100%;
  border-radius: 8rpx;
  background-color: rgb(250, 90, 90);
  color: rgb(255, 255, 255);
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.text{
  color: rgb(128, 128, 128);
  font-size: 26rpx;
}
.form_group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.form_group .sendmsg_input {
  width: 370rpx;
}
.form_group .vertificate {
  width: 326rpx;
  border-bottom: 1px solid #ddd;
  height: 121rpx;
  padding-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 121rpx;
  text-align: center;
  color: #34c9c3;
}

.vertificate text {
  color: gray;
}

.placeholder_style {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #dbdbdb;
  letter-spacing: 0;
}
.form_group input, .form_group picker {
  width: 676rpx;
  border-bottom: 1px solid #ddd;
  height: 121rpx;
  padding-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 121rpx;
}